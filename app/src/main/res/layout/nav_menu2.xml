<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#f4f4f4"
        android:orientation="vertical"
        android:weightSum="3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/building" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:layout_marginTop="35sp"
                android:layout_weight="0.5"
                android:background="#CDFFFFFF"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:layout_weight="0.3"
                    android:clickable="true"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center"
                        android:text="BRO"
                        android:textColor="@color/colorYellow"
                        android:textSize="50sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="10sp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1.2"
                app:cardBackgroundColor="@color/colorPrimary">

                <LinearLayout
                    android:id="@+id/ll_DirectirMsg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/directorimage" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/source_serif_pro_semi_bold"
                            android:gravity="start|center"
                            android:paddingLeft="10dp"
                            android:text="Fr.Jayaprakash Anthonimuthu"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/source_serif_pro_semi_bold"
                            android:gravity="start"
                            android:paddingLeft="10dp"
                            android:text="Executive Director"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:id="@+id/tv_Donaten"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="DONATE"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="GALLERY"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary">

                <TextView
                    android:id="@+id/tv_ContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="CONTACT US"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@color/colorWhite"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_Dbi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:src="@drawable/intenational_logo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/ll_facebbok"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/facebook" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:clickable="false"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center|start"
                        android:paddingLeft="5sp"
                        android:text="Facebook"
                        android:textColor="#001c73"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginBottom="5sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_twitter123" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:clickable="false"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center|start"
                        android:paddingLeft="5sp"
                        android:text="Twitter"
                        android:textColor="#02a9e4"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_ic_youtube12" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:clickable="false"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center|start"
                        android:paddingLeft="5sp"
                        android:text="Youtube"
                        android:textColor="#fe3434"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
