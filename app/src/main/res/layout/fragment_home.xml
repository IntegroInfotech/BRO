<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacimg"
    tools:context=".fragments.FragmentNews">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="2">

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="10sp"
            android:layout_weight="0.9" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_margin="10sp"
            android:layout_weight="1.1"
            android:background="@drawable/border_white2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2.1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="25sp"
            android:layout_marginRight="25sp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <com.github.demono.AutoScrollViewPager
                    android:id="@+id/vpCoverPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3sp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.7"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center|top"
                        android:text="BRO"
                        android:textColor="@color/colorYellow"
                        android:textSize="35sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="0.40"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="end|top"
                    android:text="BOSCO REACH OUT"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="0.75"
                    android:background="@drawable/border_white2"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:text="About Us"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/ll_donate"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="2.70"
                    android:background="@drawable/border_white2"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_margin="5sp"
                        android:layout_weight="1.5"
                        android:src="@drawable/donate2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/source_serif_pro_semi_bold"
                        android:gravity="center"
                        android:text="DONATE"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_ourprojects"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:text="OUR PROJECTS"
                    android:textColor="@color/colorYellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_supportcenter"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:fontFamily="@font/source_serif_pro_semi_bold"
                    android:gravity="center"
                    android:text="SUPPORT CENTER"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_weight="0.1"
            android:fontFamily="@font/source_serif_pro_semi_bold"
            android:gravity="center|start"
            android:text="NEWS AND EVENTS"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_marginBottom="35sp"
            android:layout_weight="0.5"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.github.demono.AutoScrollViewPager
                android:id="@+id/au_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>